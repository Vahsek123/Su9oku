{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^(react/(.*)$)|^react(-.*)?$",
    "^(next/(.*)$)|^(next$)",
    "<THIRD_PARTY_MODULES>",
    "^@app/(.*)$",
    "^\\./",
    "^\\.\\./"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
